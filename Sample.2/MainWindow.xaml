                        </Image.Clip>
                    </Image>
                </Grid>

                <ComboBox Style="{DynamicResource MyComboBoxStyle}" DockPanel.Dock="Right" SelectedIndex="0" VerticalContentAlignment="Center" Margin="16, 0">
                    <ComboBoxItem Content="Select Edition1" />

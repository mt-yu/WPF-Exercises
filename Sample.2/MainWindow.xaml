                    </Grid>
                </UniformGrid>
                <Grid Margin="8, 8, 8, 16" Grid.Column="1" Grid.RowSpan="2">
                    <Border Background="White" Opacity=".1" CornerRadius="24" />
                    <UniformGrid Rows="5" Margin="32, 0">
                        <DockPanel Margin="8" VerticalAlignment="Center" LastChildFill="False">

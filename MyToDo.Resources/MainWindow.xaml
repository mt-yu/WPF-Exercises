<Window x:Class="MyToDo.Resources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyToDo.Resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="solidColor" Color="Red"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button Content="Update" Margin="10" Click="Button_Click"/>
            <Button Content="Button1" Margin="10" Height="40" BorderThickness="5" BorderBrush="{StaticResource solidColor }"/>
            <Button Content="Button2" Margin="10" Height="40" BorderThickness="5"  BorderBrush="{DynamicResource solidColor}"/>
        </StackPanel>
    </Grid>
</Window>
